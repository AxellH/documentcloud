<header id="dc-workspace-secondary-navbar" class="navbar navbar-full dc-navbar dc-navbar-secondary dc-navbar-dark">
  <nav class="nav navbar-nav">
    <div id="org-switcher-menu" class="nav-item dropdown">
      <%= link_to @current_organization.name, '#', class: 'nav-link dropdown-toggle org-switcher-toggle', role: 'button', data: {toggle: 'dropdown'} %>
      <div class="dropdown-menu">
        <div class="dropdown-header">Switch toâ€¦</div>
        <%#= link_to 'My personal DocumentCloud', "/search/Account:#{@current_account.slug}", class: 'dropdown-item org-switcher-link' %>
        <% @current_account.memberships.each do |membership| %>
          <%= link_to membership.organization.name, "/search/Group:#{membership.organization.slug}", class: 'dropdown-item org-switcher-link', data: {organization_id: membership.organization.id} %>
