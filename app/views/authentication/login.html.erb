<%
  @title = "Login"
%>

<div class="container-sm content paper">
  <%= form_tag login_url, method: :post do %>
    <%= token_tag %>
    <input type="hidden" name="next" value="<%= defined?( @next_url ) ? @next_url : params[:next] %>">
    <h1 class="h3">Log in to DocumentCloud</h1>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="form-group">
          <label class="form-control-label">Email address</label>
          <input name="email" type="email" class="form-control">
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <div class="form-group">
          <label class="form-control-label">Password</label>
          <input name="password" type="password" class="form-control">
        </div>
      </div>
    </div>
    <div class="btn-group-set">
      <button class="btn btn-success btn-block" type="submit">Log in</button>
      <%= link_to 'Forgot your password?', reset_password_url, class: 'btn btn-link' %>
      <%= link_to 'Need an account?', apply_url, class: 'btn btn-link' %>
    </div>
  <% end %>
</div>
